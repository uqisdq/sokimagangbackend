<div class="col-lg-4 col-md-6 portfolio-item <%= item.filter %>">
    <div class="portfolio-wrap">
      <img src="<%= item.imgSrc %>" class="img-fluid" alt="">
      <div class="portfolio-info">  
        <h4>
          <%= item.title %>
        </h4>
        <p>
          <%= item.summary %>
        </p>
        <div class="portfolio-links">
          <a href="<%= item.galleryHref %>" data-gallery="portfolioGallery" class="portfolio-lightbox"
            title="<%= item.galleryTitle %>"><i class="bx bx-plus"></i></a>
          <a href="portfolio-details.html" class="portfolio-details-lightbox" data-glightbox="type: external"
            title="Portfolio Details"><i class="bx bx-link"></i></a>
        </div>
      </div>
    </div>
  </div>